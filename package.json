{
  "name": "firebase-chat-react",
  "version": "0.1.5",
  "description": "Integrate firebase chat",
  "author": "Sikarwar <gyanendersingh5@gmail.com>",
  "main": "dist/index.js",
  "module": "dist/index.js",
